<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.ParimatchBower" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryVariant">@color/primary_dark</item>
        <item name="colorOnPrimary">@color/on_primary</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/secondary</item>
        <item name="colorSecondaryVariant">@color/secondary_dark</item>
        <item name="colorOnSecondary">@color/on_secondary</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="colorOnSurface">?attr/colorSecondaryVariant</item>
    </style>

    <style name="App.ImageView.Avatar" parent="">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">0dp</item>
        <item name="layout_constraintDimensionRatio">W,1:1</item>
        <item name="layout_constraintTop_toBottomOf">@+id/guideline_top_bower</item>
        <item name="layout_constraintBottom_toTopOf">@+id/guideline_bottom_avatar_bower</item>
        <item name="layout_constraintStart_toEndOf">@+id/guideline_start_bower</item>
        <item name="layout_constraintEnd_toStartOf">@+id/guideline_end_bower</item>
        <item name="android:scaleType">centerCrop</item>
        <item name="android:padding">4dp</item>
        <item name="strokeWidth">4dp</item>
        <item name="strokeColor">?attr/colorOnPrimary</item>
        <item name="android:src">@drawable/ic_profile_bower</item>
        <item name="shapeAppearance">@style/App.ImageView.Avatar.ShapeAppearance</item>
    </style>

    <style name="App.ImageView.Avatar.ShapeAppearance" parent="">
        <item name="cornerFamily">cut</item>
        <item name="cornerSize">25%</item>
    </style>

    <style name="App.Button" parent="">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="layout_constraintStart_toEndOf">@+id/guideline_start_bower</item>
        <item name="layout_constraintEnd_toStartOf">@+id/guideline_end_bower</item>
        <item name="android:paddingTop">12dp</item>
        <item name="android:paddingBottom">12dp</item>
        <item name="strokeWidth">2dp</item>
        <item name="strokeColor">?attr/colorOnPrimary</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">21sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="shapeAppearance">@style/App.Button.ShapeAppearance</item>
    </style>

    <style name="App.Button.ShapeAppearance" parent="">
        <item name="cornerFamily">cut</item>
        <item name="cornerSize">50%</item>
    </style>

    <style name="App.TextView.Title" parent="">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="layout_constraintStart_toEndOf">@+id/guideline_start_bower</item>
        <item name="layout_constraintEnd_toStartOf">@+id/guideline_end_bower</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
    </style>

    <style name="App.TextView" parent="">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="layout_constraintStart_toEndOf">@+id/guideline_start_bower</item>
        <item name="layout_constraintEnd_toStartOf">@+id/guideline_end_bower</item>
        <item name="android:paddingTop">12dp</item>
        <item name="android:paddingBottom">12dp</item>
        <item name="android:background">?attr/colorPrimaryVariant</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
        <item name="android:textSize">21sp</item>
        <item name="android:textStyle">bold</item>
    </style>
</resources>